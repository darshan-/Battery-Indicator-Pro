                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
  >
    <TextView style="@style/help_cat"  android:text="@string/settings_overview" />
    <TextView style="@style/help_text" android:text="@string/settings_overview_help" />

    <TextView style="@style/help_pref" android:text="@string/color_settings" />
    <TextView style="@style/help_text" android:text="@string/color_settings_help" />

    <TextView style="@style/help_pref" android:text="@string/time_settings" />
    <TextView style="@style/help_text" android:text="@string/time_settings_help" />

    <TextView style="@style/help_pref" android:text="@string/other_settings" />
    <TextView style="@style/help_text" android:text="@string/other_settings_help" />
  </LinearLayout>
</ScrollView>
