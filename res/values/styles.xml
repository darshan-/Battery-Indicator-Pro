<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="help_cat_pre_margin">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">6dp</item>
  </style>

  <style name="help_cat">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:background">@color/ics_blue</item>
    <item name="android:textColor">#111</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="help_cat_post_margin">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">10dp</item>
  </style>

  <style name="help_pref">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">1dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:background">#CCC</item>
    <item name="android:textColor">#111</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="help_text">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">7dp</item>
    <item name="android:paddingBottom">7dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingMultiplier">1.1</item>
  </style>

  <style name="bi_help_theme" parent="Theme.AppCompat.Light">
  </style>

  <style name="bi_main_theme" parent="Theme.MaterialComponents.DayNight">
  </style>

  <style name="bi_settings_theme" parent="@android:style/Theme.Material">
  </style>

  <dimen name="compound_button_width">68dp</dimen>
  <style name="alarm_list_item_toggle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/compound_button_width</item>
    <item name="android:paddingLeft">8dp</item>
  </style>

  <style name="SelectableItem">
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>


  <color name="android_green">#A4C639</color>
  <color name="ics_blue">#33b5E5</color>
  <color name="my_yellow">#E8D018</color>
  <color name="my_darker_yellow">#D0BF27</color>
  <color name="col2020">#3b7bda</color>

  <color name="time_til_charged">@color/my_yellow</color>
  <color name="light_usage">#cccc7e</color>
  <color name="normal_usage">@color/android_green</color>
  <color name="heavy_usage">@color/my_yellow</color>
  <color name="constant_usage">#DD961B</color>

  <color name="log_unplugged">@color/my_darker_yellow</color>
  <color name="log_plugged">#5f97ac</color>
  <color name="log_charged">@color/android_green</color>
  <color name="log_unknown">#f66</color>
  <color name="log_old_status">#ccc</color>
  <color name="log_boot_completed">#886bc7</color>

  <!--color name="heavy_usage">#DD901C</color-->

  <integer name="current_info_top_left_weight">4</integer>
  <integer name="current_info_top_right_weight">6</integer>

  <integer name="bif_padding_weight">1</integer>
  <dimen name="bis_side_padding">15dp</dimen>

  <dimen name="battery_padding">10dp</dimen>

  <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />
  <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

  <style name="NotificationTextIcon" parent="NotificationTitle">
    <item name="android:textColor">@color/main_notification_default_custom_text_color</item>
  </style>

  <dimen name="main_notification_text_padding_left">10dp</dimen>

  <color name="notification_box_default_color">#222</color>
  <color name="main_notification_default_custom_text_color">#000</color>
  <bool name="default_show_box_around_icon_area">true</bool>

  <dimen name="widget_margin">0dp</dimen>

  <style name="divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.6dp</item>
    <item name="android:layout_marginLeft">7dp</item>
    <item name="android:layout_marginRight">7dp</item>
    <item name="android:background">?android:attr/listDivider</item>
  </style>

  <dimen name="tls_button_fs">16sp</dimen>
  <dimen name="tls_button_height">65dp</dimen>
</resources>
