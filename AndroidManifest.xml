<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.darshancomputing.BatteryIndicatorPro"
          android:versionCode="21"
          android:versionName="3.0.1-dev"
>
  <application android:label="@string/app_full_name"
               android:icon="@drawable/battery"
  >
    <activity android:name=".BatteryIndicator"
              android:label="@string/app_launcher_name"
              android:theme="@style/bi_theme"
              android:screenOrientation="unspecified"
              android:stateNotNeeded="true"
              android:launchMode="singleTask"
	      android:excludeFromRecents="true"
    >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".SettingsActivity"
              android:label="@string/settings_activity_name"
	      android:excludeFromRecents="true"
    />

    <activity android:name=".SettingsHelpActivity"
              android:label="@string/settings_help_activity_name"
              android:theme="@android:style/Theme.Light"
              android:stateNotNeeded="true"
	      android:excludeFromRecents="true"
    />

    <activity android:name=".HelpActivity"
              android:label="@string/help_activity_name"
              android:theme="@android:style/Theme.Light"
              android:stateNotNeeded="true"
	      android:excludeFromRecents="true"
    />

    <activity android:name=".LogViewActivity"
              android:label="@string/log_view_activity_name"
              android:stateNotNeeded="true"
	      android:excludeFromRecents="true"
    />

    <service android:name=".BatteryIndicatorService" />

    <receiver android:name=".BootCompletedReceiver"
              android:enabled="true"
              android:exported="false"
              android:label="BootCompletedReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>
  </application>

  <uses-sdk android:minSdkVersion="3"
            android:targetSdkVersion="4"
  />

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest>
